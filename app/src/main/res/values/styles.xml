<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="JingYu"></style>

    <style name="JingYu.Widget" parent="@style/JingYu" />

    <style name="JingYu.Widget.Toast.Background" parent="JingYu.Widget">
        <item name="android:background">@drawable/bg_toast_standard_gray</item>
    </style>

    <style name="JingYu.Widget.Toast.TextView" parent="JingYu.Widget">
        <item name="android:text">JingYu</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="JingYu.Widget.Toast" parent="JingYu.Widget">
        <item name="android:windowEnterAnimation">@anim/toast_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_exit</item>
    </style>
</resources>
